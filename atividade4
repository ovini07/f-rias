package repeticao;

import java.util.Scanner;

public class atividade4 {

	public static void main(String[] args) {
		Scanner ler = new Scanner (System.in);
		int soma = 0;
        for(int i = 1; i <= 10; i++) {
            System.out.print("Informe um número (" + i + "/10): ");
            int n = ler.nextInt();
            soma += n;
        }
        System.out.println("A soma dos números é: " + soma);
        ler.close();
    }
}
